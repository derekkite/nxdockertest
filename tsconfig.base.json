    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@org/angularlibs/admin": ["libs/angularlibs/admin/src/index.ts"],
      "@org/commonlibs/actions": ["libs/commonlibs/actions/src/index.ts"],
      "@org/nestlibs/adminservices": [
        "libs/nestlibs/adminservices/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
